{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "resolveJsonModule": true,
    "outDir": "lib/esm",
    "declaration": true,
    "lib": ["es2017", "es7", "es6", "dom"]
  },
  "include": [
    "./src",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "./lib"
  ]
}
